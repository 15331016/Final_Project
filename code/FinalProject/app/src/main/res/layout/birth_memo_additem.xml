<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img"
        android:src="@mipmap/birth_1"
        android:layout_width="fill_parent"
        android:layout_height="220dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="姓名："
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img"
        android:layout_marginLeft="60dp"/>

    <EditText
        android:id="@+id/name_text"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:textCursorDrawable="@null"
        android:background="@null"
        android:textSize="18dp"
        app:layout_constraintLeft_toRightOf="@+id/name"
        app:layout_constraintBottom_toBottomOf="@+id/name"/>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#f6deda"
        app:layout_constraintTop_toBottomOf="@+id/name"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="60dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="60dp"/>

    <TextView
        android:id="@+id/birth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="生日："
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="60dp"/>

    <TextView
        android:id="@+id/birth_text"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:textCursorDrawable="@null"
        android:background="@null"
        android:textSize="18dp"
        app:layout_constraintLeft_toRightOf="@+id/birth"
        app:layout_constraintBottom_toBottomOf="@+id/birth"/>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#f6deda"
        app:layout_constraintTop_toBottomOf="@+id/birth"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="60dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="60dp"/>

    <TextView
        android:id="@+id/gift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="礼物："
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/birth"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="60dp"/>

    <EditText
        android:id="@+id/gift_text"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:textCursorDrawable="@null"
        android:background="@null"
        android:textSize="18dp"
        app:layout_constraintLeft_toRightOf="@+id/gift"
        app:layout_constraintBottom_toBottomOf="@+id/gift"/>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#f6deda"
        app:layout_constraintTop_toBottomOf="@+id/gift"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="60dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="60dp"/>

    <Button
        android:id="@+id/add_confirm"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:text="增加"
        android:background="#f6deda"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gift"
        android:layout_marginTop="40dp"/>

</android.support.constraint.ConstraintLayout>