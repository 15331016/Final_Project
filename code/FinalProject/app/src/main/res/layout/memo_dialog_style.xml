<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#2f404a"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="姓名："
        android:textSize="18dp"
        android:textColor="#776264"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp" />

    <TextView
        android:id="@+id/Name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="wxm"
        android:textSize="18dp"
        android:textColor="#776264"
        app:layout_constraintLeft_toRightOf="@+id/name"
        app:layout_constraintBottom_toBottomOf="@+id/name"/>

    <TextView
        android:id="@+id/birth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="生日："
        android:textSize="18dp"
        android:textColor="#776264"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp" />

    <EditText
        android:id="@+id/Birth_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:textCursorDrawable="@null"
        android:background="@null"
        android:textSize="18dp"
        android:textColor="#776264"
        app:layout_constraintLeft_toRightOf="@+id/birth"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/birth"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#776264"
        app:layout_constraintTop_toBottomOf="@+id/birth"
        android:layout_marginTop="2dp"
        app:layout_constraintLeft_toRightOf="@+id/birth"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp" />

    <TextView
        android:id="@+id/gift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="礼物："
        android:textSize="18dp"
        android:textColor="#776264"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/birth"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp" />

    <EditText
        android:id="@+id/Gift_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:textCursorDrawable="@null"
        android:background="@null"
        android:textSize="18dp"
        android:textColor="#776264"
        app:layout_constraintLeft_toRightOf="@+id/gift"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/gift"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#776264"
        app:layout_constraintTop_toBottomOf="@+id/gift"
        android:layout_marginTop="2dp"
        app:layout_constraintLeft_toRightOf="@+id/gift"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp" />

    <Button
        android:id="@+id/add_confirm"
        android:layout_width="68dp"
        android:layout_height="30dp"
        android:text="保存修改"
        android:textColor="#2f404a"
        android:background="#776264"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@+id/gift"
        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="20dp" />

    <Button
        android:id="@+id/add_abandon"
        android:layout_width="68dp"
        android:layout_height="30dp"
        android:text="放弃修改"
        android:background="#776264"
        android:textColor="#2f404a"
        app:layout_constraintRight_toLeftOf="@+id/add_confirm"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toBottomOf="@+id/gift"
        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="25dp"/>

</android.support.constraint.ConstraintLayout>