<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img"
        android:src="@mipmap/psw_5"
        android:layout_width="fill_parent"
        android:layout_height="220dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="类别："
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img"
        android:layout_marginLeft="60dp"/>

    <EditText
        android:id="@+id/name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textCursorDrawable="@null"
        android:background="@null"
        android:textSize="18dp"
        android:hint="淘宝/支付宝/QQ……"
        app:layout_constraintLeft_toRightOf="@id/name"
        app:layout_constraintBottom_toBottomOf="@+id/name"/>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#91d0d9"
        app:layout_constraintTop_toBottomOf="@+id/name"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="60dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="60dp"/>

    <TextView
        android:id="@+id/ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID："
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="60dp"/>

    <EditText
        android:id="@+id/id_text"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:textCursorDrawable="@null"
        android:background="@null"
        android:textSize="18dp"
        android:hint="                  "
        app:layout_constraintLeft_toRightOf="@+id/ID"
        app:layout_constraintBottom_toBottomOf="@+id/ID"/>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#91d0d9"
        app:layout_constraintTop_toBottomOf="@+id/ID"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="60dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="60dp"/>

    <TextView
        android:id="@+id/PSW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密码："
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ID"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="60dp"/>

    <EditText
        android:id="@+id/psw_text"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:textCursorDrawable="@null"
        android:background="@null"
        android:textSize="18dp"
        android:hint="                  "
        app:layout_constraintLeft_toRightOf="@+id/PSW"
        app:layout_constraintBottom_toBottomOf="@+id/PSW"/>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#91d0d9"
        app:layout_constraintTop_toBottomOf="@+id/PSW"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="60dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="60dp"/>

    <Button
        android:id="@+id/add_confirm_2"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:text="增加"
        android:background="#91d0d9"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PSW"
        android:layout_marginTop="40dp"/>

</android.support.constraint.ConstraintLayout>